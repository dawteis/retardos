package retardos;

public class Espera {

    public static void Esperar(int x) {

        for (int i = 0; i < x; i++) {

            try {
                Thread.sleep(1000);
            } catch (InterruptedException ex) {
            // try y catch sirve para tratar excepciones, errores.
            }// fin de las operaciones si salta la excepción
        }
    } //  fin del método  Espera

    public static void Esperar1(int x) {

        for (int i = 0; i < x; i++) {

            try {
                Thread.sleep(1000);
                System.out.print(" . ");
            } catch (InterruptedException ex) {
            } // fin de las operaciones si salta la excepción
        }
    }//fin del método  Espera1

    public static void Esperar2(int x) {

        for (int i = 0; i < x; i++) {

            try {
                Thread.sleep(1000);
                System.out.print(" ** ");
            } catch (InterruptedException ex) {
            }
        }
    }//fin del método  Espera2
} //fin de la clase Espera
